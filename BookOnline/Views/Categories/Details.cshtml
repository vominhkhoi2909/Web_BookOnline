@model BookOnline.Models.Category

@{
    ViewData["Title"] = "Chi Tiết";
}

<h1>Thông Tin Thể Loại</h1>

<div>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            @Html.DisplayName("Tên thể loại")
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Category_Name)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayName("Tên hệ thống")
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Category_DataName)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayName("Trạng thái")
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Category_Status)
        </dd>
    </dl>
</div>
<div>
    <a asp-action="Edit" asp-route-id="@Model.Category_Id">Tới cập nhật</a> |
    <a asp-action="Index">Quay lại danh sách</a>
</div>
