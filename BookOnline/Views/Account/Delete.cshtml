@model BookOnline.Models.Account

@{
    ViewData["Title"] = "Xóa";
}

<h1>Xóa Thông Tin Tài Khoản</h1>

<h3>Bạn chắc chắn muốn xóa tài khoản này?</h3>
<div>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            @Html.DisplayName("Tên tài khoản")
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Account_Name)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayName("Email")
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Account_Email)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayName("Số điện thoại")
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Account_Phone)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayName("Loại tài khoản")
        </dt>
        <dd class="col-sm-10">
            @if (Model.Account_Type == 1)
            {
                @Html.DisplayName("Admin")
            }
            else
            {
                @Html.DisplayName("Người dùng")
            }
        </dd>
    </dl>
    
    <form asp-action="Delete">
        <input type="hidden" asp-for="Account_Id" />
        <input type="submit" value="Xác Nhận Xóa" class="btn btn-danger" onclick="return confirm('Bạn chắc chắn muốn xóa tài khoản này?')" /> |
        <a asp-action="Index">Quay lại danh sách</a>
    </form>
</div>
